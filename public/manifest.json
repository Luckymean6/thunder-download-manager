{
    "manifest_version": 2,
    "version": "0.2.1",
    "short_name": "Thunder",
    "name": "__MSG_extName__",
    "description": "__MSG_extDesc__",
    "default_locale": "en",
    "icons": {
        "128": "logo.png"
    },
    "permissions": [
        "downloads",
        "downloads.shelf",
        "downloads.open",
        "notifications",
        "storage",
        "unlimitedStorage",
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "logo.png",
        "default_popup": "index.html"
    },
    "offline_enabled": true,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    }
}